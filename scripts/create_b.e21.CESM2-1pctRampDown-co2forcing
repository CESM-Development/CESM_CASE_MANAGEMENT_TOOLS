#!/bin/csh -f
### set env variables

setenv CESMROOT /glade/work/nanr/cesm_tags/cesm2.1.4-rc.08
setenv CESM_TOOLS /glade/work/nanr/cesm_tags/CASE_tools/aixue/cesm2-thermal-haline/

set COMPSET = B1850cmip6
set MACHINE = cheyenne
set RESOLN = f09_g17
set mbr = 1
set PROJECT = P93300313

setenv CASENAME b.e21.${COMPSET}.f09_g17.1PCT-rampDown.00${mbr}
setenv REFCASE  b.e21.${COMPSET}.f09_g17.AMOC-4xco2.001
setenv REFDATE  0451-01-01

setenv CASEROOT /glade/scratch/$USER/$CASENAME
setenv RUNROOT  /glade/scratch/$USER/$CASENAME/run/
setenv REFROOT  /glade/scratch/molina/archive/$REFCASE/rest/$REFDATE-00000/

echo $REFROOT

cd $CESMROOT/cime/scripts/
./create_newcase --case $CASEROOT --res $RESOLN  --compset $COMPSET  --project $PROJECT

cd $CASEROOT

./xmlchange RUN_REFCASE=$REFCASE
./xmlchange RUN_REFDATE=$REFDATE
./xmlchange STOP_N=3
./xmlchange STOP_OPTION=nyears
./xmlchange RESUBMIT=49
./xmlchange JOB_QUEUE=economy --subgroup case.run
./xmlchange GET_REFCASE=FALSE

./xmlchange NTASKS_ICE=36
./xmlchange NTASKS_LND=504
./xmlchange ROOTPE_ICE=504

./case.setup

if (! -d $RUNROOT) then
   mkdir -p $RUNROOT
endif

echo $REFROOT/
echo $RUNROOT/
cp $REFROOT/rpoint* $RUNROOT/
ln -s $REFROOT/b.* $RUNROOT/

cp $CESM_TOOLS/user_nl_files/1pctRampDown/user_nl* $CASEROOT/

./preview_namelists

#qcmd -- ./case.build >& bld.`date +%m%d-%H%M`

